 pipeline {

   environment {
        imagename = "henrimfonzie/python-tp-k8s"
        registryCredential = 'docker'
        dockerImage = ''
    }

  agent any
  stages {

    stage('git') {
      steps {
        git url: 'https://github.com/henrimfonzie/TP-CI-CD.git'
      }
    }

    stage('test and stop') {
      steps {
        script{
            dockerImage = docker.build ('$imagename', 'docker-python-elk')
        }
      }
    }

    stage('push Image') {
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push("$BUILD_NUMBER")
                        dockerImage.push('latest') 
                    }
                }
            }
        }

    stage('deploy') {
            steps {
               sh 'ansible playbook'
            }
        }  
  }
 }